<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:id="@+id/recycler_view"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/block_all_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Do Not Disturb"
                android:textSize="30sp"/>

            <RadioButton
                android:id="@+id/block_list_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Block BlackList"
                android:textSize="30sp"/>

            <RadioButton
                android:id="@+id/block_none_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Block Non-Contacts"
                android:textSize="30sp"/>

            <RadioButton
                android:id="@+id/block_unsaved"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Allow All Calls"
                android:textSize="30sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>